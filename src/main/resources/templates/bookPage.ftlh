<#import "parts/common.ftlh" as c>
<#include "parts/security.ftlh">

<@c.page>
    <div style="height: 100vh">
    <#if book.filename??>
        <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <img src="/img/${book.filename}" class="card-img-top" alt="No image">
            </div>
            <div class="col-sm-8">
                <h5 class="display-4">${book.name}</h5>
                <#if book.description??>
                    <p>${book.description}</p>
                <#else>
                    <p>No description</p>
                </#if>
                <div class="mt-3">
                    <p>Author: ${book.author}</p>
                    <p>Genre: ${book.genre}</p>
                    <p>Year: ${book.year}</p>
                    <p>ISBN: ${book.isbn}</p>
                </div>
                <#if !isAdmin>
                    <#if user.orderedBook(book.id)>
                        <div class="alert alert-warning" role="alert">
                            Book has been ordered!
                        </div>
                     <#else>
                        <#if user.bookInLib(book.id)>
                            <div class="alert alert-success" role="alert">
                                Book in your lib!
                            </div>
                            <form method="post" action="/userLib/delete">
                                <div class="my-5">
                                    <input type="hidden" name="bookId" value="${book.id}">
                                    <button class="btn btn-outline-success">Delete</button>
                                    <label>${message!}</label>
                                    <input type="hidden" name="_csrf" value="${_csrf.token}" />
                                </div>
                            </form>
                            <#else>
                                <form method="post" action="/bookPage">
                                    <div class="my-5">
                                        <input type="hidden" name="bookId" value="${book.id}">
                                        <button class="btn btn-outline-success">Order</button>
                                        <label>${message!}</label>
                                        <input type="hidden" name="_csrf" value="${_csrf.token}" />
                                    </div>
                                </form>
                            </#if>
                    </#if>
                </#if>
                <#if isAdmin >
                    <form method="get" action="/bookPage/edit">
                        <div class="my-5">
                            <input type="hidden" name="bookId" value="${book.id}">
                            <button class="btn btn-outline-success">Edit</button>
                            <label>${message!}</label>
                            <input type="hidden" name="_csrf" value="${_csrf.token}" />
                        </div>
                    </form>
                    <#if errorDeleteID??>
                        <div class="alert alert-warning" role="alert">
                            Book has been ordered!You can't delete this book!Deny or give order.
                        </div>
                    <#else>
                        <form method="post" action="/admin/bookList/delete">
                            <div class="my-5">
                                <input type="hidden" name="bookId" value="${book.id}">
                                <input type="hidden" name="userId" value="${user.id}" />
                                <button class="btn btn-outline-success">Delete</button>
                                <label>${message!}</label>
                                <input type="hidden" name="_csrf" value="${_csrf.token}" />
                            </div>
                        </form>
                        </#if>
                    </#if>
                </#if>
            </div>
        </div>

    </div>
    </div>
</@c.page>
